# Production Multi-stage Dockerfile for WattsMyBill React + FastAPI
FROM node:18-alpine AS frontend-builder

# Build React frontend
WORKDIR /app/frontend
COPY wattsmybill-frontend/package*.json ./
RUN npm ci --only=production

COPY wattsmybill-frontend/ ./
RUN npm run build

# Python production stage
FROM python:3.13-slim AS production

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV ENVIRONMENT=production
ENV DEBUG=false

# Set working directory
WORKDIR /app

# Install system dependencies (minimal for production)
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    tesseract-ocr \
    poppler-utils \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip cache purge

# Copy React build from frontend stage
COPY --from=frontend-builder /app/frontend/build ./static

# Copy application code
COPY . .

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash wattsmybill && \
    chown -R wattsmybill:wattsmybill /app
USER wattsmybill

# Create optimized startup script
RUN echo '#!/bin/bash\n\
set -e\n\
echo "ðŸš€ Starting WattsMyBill Production (React + FastAPI)"\n\
echo "ðŸ“Š Environment: $ENVIRONMENT"\n\
echo "ðŸ”’ Running as user: $(whoami)"\n\
echo "ðŸ“‚ Static files: $(ls -la /app/static 2>/dev/null | wc -l) files"\n\
echo "ðŸŒ Starting on port $PORT"\n\
exec uvicorn main:app \\\n\
  --host 0.0.0.0 \\\n\
  --port $PORT \\\n\
  --workers 1 \\\n\
  --worker-class uvicorn.workers.UvicornWorker \\\n\
  --access-log \\\n\
  --no-use-colors\n\
' > /app/start-prod.sh && chmod +x /app/start-prod.sh

# Health check (updated for FastAPI)
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:$PORT/health || exit 1

# Expose port (Cloud Run will set PORT env var)
EXPOSE $PORT

# Production startup command
CMD ["/app/start-prod.sh"]