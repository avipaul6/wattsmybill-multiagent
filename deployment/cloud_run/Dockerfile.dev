# Development Dockerfile for WattsMyBill - Fixed for FastAPI + React
FROM node:18-alpine AS frontend-builder

# Build React frontend for development
WORKDIR /app/frontend
COPY wattsmybill-frontend/package*.json ./
RUN npm ci

COPY wattsmybill-frontend/ ./
RUN npm run build

# Python development stage
FROM python:3.13-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV ENVIRONMENT=development
ENV DEBUG=true

# Set working directory
WORKDIR /app

# Install system dependencies including dev tools
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    software-properties-common \
    git \
    tesseract-ocr \
    poppler-utils \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies including dev dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir pytest pytest-cov black flake8 ipython

# Copy React build from frontend stage
COPY --from=frontend-builder /app/frontend/build ./static

# Copy application code
COPY . .

# Create startup script for development
RUN echo '#!/bin/bash\n\
echo "ðŸš€ Starting WattsMyBill Development (FastAPI + React)"\n\
echo "ðŸ“Š Environment: $ENVIRONMENT"\n\
echo "ðŸ“‚ Static files location: /app/static"\n\
echo "ðŸŒ API will serve React app and API endpoints"\n\
echo "ðŸ”§ Development mode with auto-reload"\n\
PORT=${PORT:-8501}\n\
echo "ðŸŒ Starting on port $PORT"\n\
exec uvicorn main:app --host 0.0.0.0 --port $PORT --reload\n\
' > /app/start-dev.sh && chmod +x /app/start-dev.sh

# Health check for FastAPI
HEALTHCHECK --interval=60s --timeout=15s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:${PORT:-8501}/health || exit 1

# Expose port
EXPOSE 8501

# Development startup command with auto-reload
CMD ["/app/start-dev.sh"]